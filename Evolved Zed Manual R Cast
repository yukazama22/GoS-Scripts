Config = scriptConfig("IZed", "Zed.lua")
Config.addParam("Q", "Use Q", SCRIPT_PARAM_ONOFF, true)
Config.addParam("E", "Use E", SCRIPT_PARAM_ONOFF, true)

OnLoop(function(myHero)
	AutoIgnite()
	DrawText("Evolved Zed is Loaded, and this is my first Script EVER",24,0,0,0xffff0000);
	if IWalkConfig.Combo then
	local unit = GetCurrentTarget()
	local currhp = GetCurrentHP(myHero)
	if ValidTarget(unit, 900) then
		for i=0, 63 do
			if GetBuffCount(unit,i) > 0 and GetBuffName(unit,0):lower():find("DeathMark") then
				DeathMark = true
			end
		end

		if Config.R then
		if CanUseSpell(myHero, _R) == READY and GotBuff(unit, "DeathMark") > 0 and IsInDistance(unit, 625) then
			CastSpell(myHero, _R)
		end

	 -- GetPredictionForPlayer(startPosition, targetUnit, targetUnitMoveSpeed, spellTravelSpeed, spellDelay, spellRange, spellWidth, collision, addHitBox)
		local QPred = GetPredictionForPlayer(GetMyHeroPos(),unit,GetMoveSpeed(unit),1700,250,925,50,false,true)
		if Config.Q then
		if CanUseSpell(myHero, _Q) == READY and QPred.HitChance == 1 then
		CastSkillShot(_Q,QPred.PredPos.x,QPred.PredPos.y,QPred.PredPos.z)
		end
	   end

	if Config.E then
	if CanUseSpell(myHero, _E) == READY and IsInDistance(unit, 290) then
		CastTargetSpell(myHero, _E)
	end
	end
       end
            end
        end
end)

