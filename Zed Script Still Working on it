require('Inspired')

function AfterObjectLoopEvent(myHer0)
	myHero = myHer0
	myHeroPos = GetOrigin(myHero)
		DrawText("Zed Fom GoS is Loaded, and this is my first Script EVER",24,0,0,0xffff0000);

	local target = GetCurrentTarget(1000)
	local currhp = GetCurrentHP(myHero)
	if KeyIsDown(0x20) then
	if ValidTarget(target, 1000) then
		  -- GetPredictionForPlayer(startPosition, targetUnit, targetUnitMoveSpeed, spellTravelSpeed, spellDelay, spellRange, spellWidth, collision, addHitBox)
		local QPred = GetPredictionForPlayer(GetMyHeroPos(),target,GetMoveSpeed(target),0,0,900,0,true,true)
	if CanUseSpell(myHero, _Q) == READY and QPred.HitChance == 1 then
	CastSkillShot(_Q,QPred.PredPos.x,QPred.PredPos.y,QPred.PredPos.z)
	end



	if CanUseSpell(myHero, _R) == READY and IsInDistance(target, 625) then
		CastTargetSpell(target, _R)
	if CanUseSpell(myHero, _R) == READY and currhp < 0.3 then
		CastSpell(myHero, _R)
	end
	if CanUseSpell(myHero, _E) == READY and IsInDistance(target, 290) then
		CastTargetSpell(myHero, _E)
	end

       end
            end
        end
end
